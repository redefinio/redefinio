{% trans_default_domain 'FOSUserBundle' %}

<div id="login" class="col-xs-12 col-sm-8 col-sm-offset-2 col-md-6 col-md-offset-3 col-lg-6 col-lg-offset-3">
    <div class="block">
        <div class="row">
            <div class="header col-xs-12"></div>
        </div>
        <div class="row">
            <div class="inner">
                {% if error %}
                <div class="error">
                    <div>{{ error.messageKey|trans(error.messageData, 'security') }}</div>
                </div>
                {% endif %}
                <h1>Log in to Your Account</h1>
                <form action="{{ path("fos_user_security_check") }}" method="post">
                    <label for="username">Email</label>
                    <input id="username" name="_username" value="{{ last_username }}" required="required" class="correct" />
                    
                    <label for="password">Password</label>
                    <input type="password" id="password" name="_password" required="required" />
                    
                    <button type="submit" id="_submit" name="_submit">{{ 'security.login.submit'|trans }}</button>
                    {% if csrf_token %}
                        <input type="hidden" name="_csrf_token" value="{{ csrf_token }}" />
                    {% endif %}
                </form>
            </div>
        </div>
    </div>
    <div class="already">
        Don't have an account? <a href="{{ path("fos_user_registration_register") }}">Sign up!</a>
    </div>
</div>
