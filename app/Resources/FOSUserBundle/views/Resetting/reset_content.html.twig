{% trans_default_domain 'FOSUserBundle' %}

<div id="login" class="col-xs-12 col-sm-8 col-sm-offset-2 col-md-6 col-md-offset-3 col-lg-6 col-lg-offset-3">
    <div class="block">
        <div class="row">
            <div class="form-header col-xs-12"></div>
        </div>
        <div class="row">
            <div class="inner">
                <h1>Reset your password</h1>
                {{ form_start(form, { 'action': path('fos_user_resetting_reset', {'token': token}), 'attr': { 'class': 'fos_user_resetting_reset' } }) }}
                {{ form_errors(form.plainPassword) }}
                {{ form_widget(form.plainPassword, { 'attr': {'label': 'Password'} }) }}

                {{ form_widget(form) }}
                <div>
                    <button type="submit" id="_submit" name="_submit">{{ 'resetting.reset.submit'|trans }}</button>
                </div>
                {{ form_end(form) }}
            </div>
        </div>
    </div>
</div>
