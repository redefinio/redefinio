{% trans_default_domain 'FOSUserBundle' %}

<div id="login" class="col-xs-12 col-sm-8 col-sm-offset-2 col-md-6 col-md-offset-3 col-lg-6 col-lg-offset-3">
    <div class="block">
        <div class="row">
            <div class="form-header col-xs-12"></div>
        </div>
        <div class="row">
            <div class="inner">
                <h1>Reset your password</h1>
                <form action="{{ path('fos_user_resetting_send_email') }}" method="POST">
                    <label for="username">Email</label>
                    <input id="username" name="username" required="required" />

                    <button type="submit" id="_submit" name="_submit">{{ 'resetting.request.submit'|trans }}</button>
                </form>
            </div>
        </div>
    </div>
</div>

