{% extends 'base.html.twig' %}

{% block body %}
    <h1>Certificate</h1>

    <table>
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ certificate.id }}</td>
            </tr>
            <tr>
                <th>Date</th>
                <td>{% if certificate.date %}{{ certificate.date|date('Y-m-d H:i:s') }}{% endif %}</td>
            </tr>
            <tr>
                <th>Title</th>
                <td>{{ certificate.title }}</td>
            </tr>
            <tr>
                <th>Certificator</th>
                <td>{{ certificate.certificator }}</td>
            </tr>
            <tr>
                <th>About</th>
                <td>{{ certificate.about }}</td>
            </tr>
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('cv_show', { 'id': certificate.Cv.Id }) }}">Back to the cv</a>
        </li>
        <li>
            <a href="{{ path('certificate_edit', { 'id': certificate.id }) }}">Edit</a>
        </li>
        <li>
            {{ form_start(delete_form) }}
                <input type="submit" value="Delete">
            {{ form_end(delete_form) }}
        </li>
    </ul>
{% endblock %}
